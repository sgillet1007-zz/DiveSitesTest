extends layout

block content
	h1 Open Water Logbook
	button(class="btn btn-default newDive", type="submit") Edit
	#leaflet-map
	#dive-select
	#dive-form.form-wrapper
		h3 Fill out dive details
		form.form-inline
			.form-group
				label Dive Site
				input.form-control#input-location(type="text",placeholder="pull from selected dive")
			.form-group
				label Dive Lat.
				input.form-control#input-lat(type="number",placeholder="pull from selected dive")
			.form-group
				label Dive Long.
				input.form-control#input-lat(type="number",placeholder="pull from selected dive") 
			.form-group
				label Date
				input.form-control#input-date(type="date",placeholder="Date")
			.form-group
				label Time In
				input.form-control#input-timeIn(type="time")
			.form-group
				label Time Out
				input.form-control#input-timeOut(type="time")
			.form-group
				label Tank Pressure Start (psi)
				select.form-control#input-psiStart
					option 3500
					option 3400
					option 3300
					option 3200
					option 3100
					option 3000
					option 2900
					option 2800
					option 2700
					option 2600
					option 2500
					
			.form-group
				label Tank Pressure End (psi)
				select.form-control#input-psiEnd
					option 100
					option 200
					option 300
					option 400
					option 500
					option 600
					option 700
					option 800
					option 900
					option 1000
					option 1100
					option 1200
					option 1300
					option 1400
					option 1500
			.form-group
				label Weight (lbs.)
				select.form-control#input-weight
					option 0
					option 1
					option 2
					option 3
					option 4
					option 5
					option 6
					option 7
					option 8
					option 9
					option 10
					option 11
					option 12
					option 13
					option 14
					option 15
					option 16
					option 17
					option 18
					option 19
					option 20

			.form-group
				label Suit Type
				select.form-control#input-suitType
					option swimsuit
					option swimsuit w/ shirt
					option short wetsuit 3mm
					option short wetsuit 5mm
					option long wetsuit 3mm
					option long wetsuit 5mm
					option long wetsuit 6mm
					option drysuit

			.form-group
				label Dive Type
				select.form-control#input-diveType
					option boat
					option shore
					option liveaboard
			.form-group
				label Dive Conditions
				select.form-control#input-diveConditions
					option current
					option surge
					option waves
			.form-group
				label Water Temp. (F)
				select.form-control#input-tWater
					option
			.form-group
				label Air Temp. (F)
				select.form-control#input-tAir
					option
			.form-group
				label Visibility (ft.)
				select.form-control#input-visibility
					option
			.form-group
				label Dive Computer Make/Model
				input.form-control#input-diveCompType(type="text",placeholder="pull from selected dive")
			.form-group
				label Max. Depth
				select.form-control#input-diveMaxDepth
					option
			.form-group
				label Notes
				input.form-control#input-notes(rows="2")				


